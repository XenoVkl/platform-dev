+<?php
+
+/**
+ * @file
+ * Install, update and uninstall functions for the scheduler_workbench module.
+ */
+
+/**
+ * Implements hook_install().
+ */
+function scheduler_workbench_install() {
+  _scheduler_workbench_status();
+}
+
+/**
+ * Implements hook_uninstall().
+ */
+function scheduler_workbench_uninstall() {
+  variable_del('scheduler_workbench_allowed_status');
+}
+
+/**
+ * Implements hook_update_N().
+ */
+function scheduler_workbench_update_7001() {
+  if (!variable_set('scheduler_workbench_allowed_status', array())) {
+    _scheduler_workbench_status();
+  }
+}
+
+/**
+ * Sets the allowed status that can be scheduled for publication.
+ */
+function _scheduler_workbench_status() {
+  $transitions = workbench_moderation_transitions();
+  $status = array();
+  foreach ($transitions as $key => $value) {
+    if ($value->to_name != 'published') {
+      unset($transitions[$key]);
+    }
+    else {
+      $status[] = $value->from_name;
+    }
+  }
+  variable_set('scheduler_workbench_allowed_status', $status);
+}
